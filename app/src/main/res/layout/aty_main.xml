<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_black"
            android:padding="0.5dp">

            <EditText
                style="@style/textStyle_default"
                android:layout_width="150dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="5dp"
                android:text="PC1011010" />

            <Button
                android:id="@+id/btn_search"
                style="@style/btnStyle_green"
                android:text="搜索" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_controlPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" />

    </RelativeLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottomBar"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp" />

        <LinearLayout
            android:id="@+id/layout_slide"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hanxin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="韩信" />

            <TextView
                android:id="@+id/tv_caijian"
                style="@style/textStyle_default"
                android:padding="10dp"
                android:text="裁剪作业界面" />

            <TextView
                android:id="@+id/tv_diaogua"
                style="@style/textStyle_default"
                android:padding="10dp"
                android:text="吊挂作业界面" />

        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>