<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_gray"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0.5dp"
        android:showDividers="middle">
        
        <TextView
            android:id="@+id/tv_sizeCode"
            style="@style/textStyle_default"
            android:layout_width="match_parent"
            android:background="@color/divider_gray"
            android:gravity="center"
            android:padding="@dimen/dp_2" />
        
        <TextView
            android:id="@+id/tv_AMOUNT"
            style="@style/textStyle_default"
            android:padding="@dimen/dp_2" />
        
        <TextView
            android:id="@+id/tv_FB_QTY"
            style="@style/textStyle_default"
            android:padding="@dimen/dp_2" />
        
        <EditText
            android:id="@+id/et_SC_QTY"
            style="@style/textStyle_default"
            android:layout_width="match_parent"
            android:background="@color/transparent"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/dp_2" />
        
        <TextView
            android:id="@+id/tv_different"
            style="@style/textStyle_default"
            android:layout_width="match_parent"
            android:background="@color/text_red_default"
            android:gravity="center"
            android:padding="@dimen/dp_2"
            android:textColor="@color/white" />
    
    </LinearLayout>

</LinearLayout>