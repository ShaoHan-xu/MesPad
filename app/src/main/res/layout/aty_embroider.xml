<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_gray"
    android:orientation="horizontal"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <HorizontalScrollView
            android:id="@+id/hsv_embroider_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_embroider_process"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/hsv_embroider_process"
            android:background="@drawable/divider_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/hsv_embroider_process"
            android:layout_marginTop="0.5dp"
            android:divider="@drawable/divider_gray"
            android:orientation="horizontal"
            android:showDividers="middle">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_embroider_embroider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/loading" />

                <TextView
                    style="@style/textStyle_default"
                    android:padding="10dp"
                    android:text="绣花图案" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_embroider_pattern"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/loading" />

                <TextView
                    style="@style/textStyle_default"
                    android:padding="10dp"
                    android:text="纸样图案" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@drawable/divider_gray"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="12dp">

            <TextView
                style="@style/textStyle_default"
                android:text="绣花部件：" />

            <TextView
                android:id="@+id/tv_embroider_part"
                style="@style/textStyle_default" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                style="@style/textStyle_default"
                android:text="绣花部件名称：" />

            <TextView
                android:id="@+id/tv_embroider_partName"
                style="@style/textStyle_default"
                android:text="部件名称" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                style="@style/textStyle_default"
                android:text="工艺描述："
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_embroider_desc"
                style="@style/textStyle_default"
                android:text="部件名称" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                style="@style/textStyle_default"
                android:text="品质要求："
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_embroider_qualityRequest"
                style="@style/textStyle_default"
                android:text="部件名称" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                style="@style/textStyle_default"
                android:text="图案工艺："
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_embroider_artist"
                style="@style/textStyle_default"
                android:text="图案工艺" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>