<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/colorPrimary">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="试产工序确认"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/iv_pilotProd_login"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:padding="@dimen/dp_3"
                android:src="@drawable/ic_user" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前登录用户："
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
            
            <TextView
                android:id="@+id/tv_pilotProd_loginUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            
            <Button
                android:id="@+id/btn_pilotProd_processSheets"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/border_black"
                android:text="工艺单显示" />
            
            <Button
                android:id="@+id/btn_pilotProd_video"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/border_black"
                android:text="工序视频" />
            
            <Button
                android:id="@+id/btn_pilotProd_feedback"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/border_black"
                android:text="试产反馈" />
        
        </LinearLayout>
        
        <Button
            android:id="@+id/btn_pilotProd_complete"
            style="@style/btnStyle_primary"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_25"
            android:text="完成当前工序" />
    
    
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottom"
        android:layout_below="@id/layout_title"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                
                <TextView
                    style="@style/textStyle_default"
                    android:text="当前作业款号：" />
                
                <TextView
                    android:id="@+id/tv_pilotProd_curItem"
                    style="@style/textStyle_default"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
                
                <TextView
                    style="@style/textStyle_default"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="当前作业步骤：" />
                
                <TextView
                    android:id="@+id/tv_pilotProd_curStep"
                    style="@style/textStyle_default"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/border_selected"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="0.5dp">
                
                <Button
                    android:id="@+id/btn_pilotProd_searchType"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_20"
                    android:background="@color/white"
                    android:drawableRight="@drawable/ic_arrow_down_gray"
                    android:paddingRight="@dimen/dp_5"
                    android:text="款号" />
                
                <EditText
                    android:id="@+id/et_pilotProd_item"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_20"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10" />
                
                <Button
                    android:id="@+id/btn_pilotProd_search"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/btn_primary"
                    android:text="搜索"
                    android:textColor="@color/white" />
            
            </LinearLayout>
        
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_border_gray_light"
            android:divider="@drawable/divider_gray_light"
            android:orientation="horizontal"
            android:padding="1dp"
            android:showDividers="middle">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_disable"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3">
                    
                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="@dimen/dp_30"
                        android:gravity="center"
                        android:text="步骤" />
                    
                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="@dimen/dp_80"
                        android:gravity="center"
                        android:text="工序代码" />
                    
                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="工序描述" />
                    
                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="@dimen/dp_100"
                        android:gravity="center"
                        android:text="制作设备描述" />
                    
                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="@dimen/dp_60"
                        android:gravity="center"
                        android:text="标准工时(秒)" />
                
                </LinearLayout>
                
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_operation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@drawable/divider_gray_light"
                android:orientation="vertical"
                android:showDividers="middle">
                
                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_sopImg"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2" />
                
                <ScrollView
                    android:id="@+id/tag"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/bg_gray"
                    android:padding="5dp">
                    
                    <TextView
                        android:id="@+id/tv_pilotProd_operationDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray_default" />
                </ScrollView>
            
            </LinearLayout>
        
        </LinearLayout>
    
    
    </LinearLayout>

</RelativeLayout>