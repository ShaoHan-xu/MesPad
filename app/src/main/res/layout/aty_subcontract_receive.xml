<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="10dp"
        android:text="外协收货"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_title"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_save"
            style="@style/btnStyle_primary"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="保存" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/border_black"
            android:padding="0.5dp">

            <EditText
                android:id="@+id/et_orderNum"
                style="@style/textStyle_default"
                android:layout_width="@dimen/searchBoxWidth"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:hint="输入RFID卡号搜索"
                android:padding="5dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/btn_search"
                style="@style/btnStyle_green"
                android:layout_height="match_parent"
                android:text="搜索" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottom"
        android:layout_below="@id/tv_title"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5">

            <Button
                android:id="@+id/btn_add"
                style="@style/btnStyle_green_round"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="手动添加"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/btn_add"
                android:layout_marginRight="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/border_black"
                android:divider="@drawable/divider_gray"
                android:orientation="vertical"
                android:padding="0.5dp"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray"
                    android:showDividers="middle">

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="RFID卡号" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="工单号" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="SFC编号" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="尺码" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="0.5" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_subcontract_receive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/border_black"
            android:divider="@drawable/divider_gray"
            android:orientation="vertical"
            android:padding="0.5dp"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_gray"
                android:showDividers="middle">

                <TextView
                    style="@style/textStyle_default"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="序号" />

                <TextView
                    style="@style/textStyle_default"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="数量" />

                <TextView
                    style="@style/textStyle_default"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_subcontract_received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>