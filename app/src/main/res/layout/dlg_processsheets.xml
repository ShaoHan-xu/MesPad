<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border_black"
        android:orientation="vertical"
        android:padding="0.3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_processSheets_img"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_margin="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_gray"
                android:orientation="vertical"
                android:showDividers="middle|end">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray"
                    android:orientation="horizontal"
                    android:showDividers="beginning|middle">

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="款号" />

                    <TextView
                        android:id="@+id/tv_processSheets_style"
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="工艺师" />

                    <TextView
                        android:id="@+id/tv_processSheets_craftsman"
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray"
                    android:orientation="horizontal"
                    android:showDividers="beginning|middle">

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="款名" />

                    <TextView
                        android:id="@+id/tv_processSheets_styleName"
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="年份" />

                    <TextView
                        android:id="@+id/tv_processSheets_year"
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray"
                    android:orientation="horizontal"
                    android:showDividers="beginning|middle">

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="纸样号" />

                    <TextView
                        android:id="@+id/tv_processSheets_patternNumber"
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="季节" />

                    <TextView
                        android:id="@+id/tv_processSheets_season"
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray"
                    android:orientation="horizontal"
                    android:showDividers="beginning|middle">

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="设计师" />

                    <TextView
                        android:id="@+id/tv_processSheets_designer"
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="波段" />

                    <TextView
                        android:id="@+id/tv_processSheets_band"
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray"
                    android:orientation="horizontal"
                    android:showDividers="beginning|middle">

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="纸样师" />

                    <TextView
                        android:id="@+id/tv_processSheets_planner"
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/divider_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_disable"
            android:gravity="center"
            android:padding="3dp"
            android:text="尺寸表（单位：CM）"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_itemTitle"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@drawable/divider_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_disable"
            android:divider="@drawable/divider_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:showDividers="middle|end">

            <TextView
                style="@style/textStyle_default"
                android:layout_width="80dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="部件" />

            <TextView
                style="@style/textStyle_default"
                android:layout_width="180dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="度法" />

            <TextView
                style="@style/textStyle_default"
                android:layout_width="60dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="公差" />

            <TextView
                style="@style/textStyle_default"
                android:layout_width="60dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="纸样松量" />

            <LinearLayout
                android:id="@+id/layout_processSheets_sizeCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:divider="@drawable/divider_gray"
                android:gravity="center"
                android:orientation="horizontal"
                android:showDividers="middle" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_gray"
                android:orientation="vertical"
                android:showDividers="middle">

                <LinearLayout
                    android:id="@+id/layout_processSheets_pattern"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray"
                    android:orientation="vertical"
                    android:showDividers="beginning|middle|end" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_disable"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="工艺说明"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_itemTitle"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_disable"
                    android:divider="@drawable/divider_gray"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="部位" />

                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="工艺描述" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_processSheets_technology"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray"
                    android:orientation="vertical"
                    android:showDividers="middle" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>