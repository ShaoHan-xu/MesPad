<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_border_radius_gray"
    android:divider="@drawable/divider_gray_light"
    android:gravity="center"
    android:orientation="horizontal"
    android:showDividers="middle">
    
    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tv_labuTable_shopOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text_black_default"
            android:textSize="20dp"
            android:visibility="gone" />
        
        <RelativeLayout
            android:id="@+id/layout_labuTable_toggle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <CheckBox
                android:id="@+id/ckb_labuTable_toggle"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_layoutimg"
                android:button="@null"
                android:gravity="center"
                android:text="排料图"
                android:textColor="@color/white"
                android:textSize="20sp" />
            
            <TextView
                android:id="@+id/tv_labuTable_number"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_circle_white"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="25sp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="汇总明细"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_describe" />
        
        </RelativeLayout>
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout_labuTable_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider_gray_light"
        android:orientation="horizontal"
        android:showDividers="middle">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@drawable/divider_gray_light"
            android:gravity="center"
            android:orientation="vertical"
            android:showDividers="middle">
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="码数" />
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下单数" />
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已拉布" />
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待拉布"
                android:textColor="@color/text_red_default"
                android:textStyle="bold" />
        </LinearLayout>
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout_labuTable_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone" />
</LinearLayout>
