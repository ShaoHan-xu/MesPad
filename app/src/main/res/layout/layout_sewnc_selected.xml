<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_2"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_dragView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_black"
            android:orientation="horizontal"
            android:padding="0.5dp">

            <TextView
                android:id="@+id/tv_recordSewNC_selected_code"
                style="@style/textStyle_default"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_2" />

            <View style="@style/line_vertical" />

            <TextView
                android:id="@+id/tv_recordSewNC_selected_process"
                style="@style/textStyle_default"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_2" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_recordSewNC_delSelected"
            style="@style/textStyle_default"
            android:layout_height="match_parent"
            android:background="@color/text_red_default"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="删除"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>