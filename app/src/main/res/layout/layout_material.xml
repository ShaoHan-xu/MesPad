<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/tag_matNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_matNum"
            style="@style/textStyle_default" />

        <TextView
            android:id="@+id/tv_matLayers"
            style="@style/textStyle_default"
            android:textColor="@color/text_red_default" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_materials"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_above="@id/tag_matNum"
        android:scaleType="centerCrop"
        android:src="@drawable/loading" />

</RelativeLayout>