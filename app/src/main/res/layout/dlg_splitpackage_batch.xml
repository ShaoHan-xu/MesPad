<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/layout_buttonWrap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray_disable"
            android:text="取消"
            android:textSize="@dimen/textSize_content" />
        
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_orange"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_content" />
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
                style="@style/textStyle_default"
                android:text="订单号："
                android:textColor="@color/white" />
            
            <TextView
                android:id="@+id/tv_shopOrder"
                style="@style/textStyle_default"
                android:text=""
                android:textColor="@color/white" />
            
            <TextView
                style="@style/textStyle_default"
                android:layout_marginLeft="20dp"
                android:text="款号："
                android:textColor="@color/white" />
            
            <TextView
                android:id="@+id/tv_item"
                style="@style/textStyle_default"
                android:text=""
                android:textColor="@color/white" />
            
            <TextView
                style="@style/textStyle_default"
                android:layout_marginLeft="20dp"
                android:text="排料图："
                android:textColor="@color/white" />
            
            <TextView
                android:id="@+id/tv_layoutNo"
                style="@style/textStyle_default"
                android:text=""
                android:textColor="@color/white" />
        
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            
            <TextView
                style="@style/textStyle_default"
                android:text="分包作业单号："
                android:textColor="@color/white" />
            
            <TextView
                android:id="@+id/tv_workNo"
                style="@style/textStyle_default"
                android:text=""
                android:textColor="@color/white" />
            
            <TextView
                style="@style/textStyle_default"
                android:layout_marginLeft="20dp"
                android:text="码数："
                android:textColor="@color/white" />
            
            <TextView
                android:id="@+id/tv_size"
                style="@style/textStyle_default"
                android:text=""
                android:textColor="@color/white" />
            
            <TextView
                style="@style/textStyle_default"
                android:layout_marginLeft="20dp"
                android:text="数量："
                android:textColor="@color/white" />
            
            <TextView
                android:id="@+id/tv_qty"
                style="@style/textStyle_default"
                android:text=""
                android:textColor="@color/white" />
            
            <TextView
                style="@style/textStyle_default"
                android:text="件"
                android:textColor="@color/white" />
        
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_buttonWrap"
        android:layout_below="@id/title"
        android:layout_margin="10dp"
        android:background="@drawable/bg_border_gray_light"
        android:divider="@drawable/divider_gray_light"
        android:orientation="vertical"
        android:padding="0.5dp"
        android:showDividers="middle">
        
        <TextView
            android:id="@+id/tv_splitCard_typeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_disable"
            android:gravity="center"
            android:padding="10dp"
            android:text="按件数分包"
            android:textColor="@color/text_black_default"
            android:textSize="@dimen/textSize_title" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_gray_light"
            android:orientation="horizontal"
            android:showDividers="middle">
            
            <TextView
                android:id="@+id/tv_packageNum_tag"
                style="@style/textStyle_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="序列号" />
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="件数" />
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="打印" />
        
        </LinearLayout>
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <LinearLayout
                android:id="@+id/layout_itemList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_gray_light"
                android:orientation="vertical"
                android:showDividers="middle">
                
                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_green_round_new"
                    android:text="新增分包"
                    android:textColor="@color/white" />
            
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>