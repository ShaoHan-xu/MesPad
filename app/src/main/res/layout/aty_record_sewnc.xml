<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/textStyle_default"
            android:text="工票号：" />

        <TextView
            android:id="@+id/tv_recordSewNC_workNum"
            style="@style/textStyle_default" />
    </LinearLayout>

    <View style="@style/line" />

    <LinearLayout
        android:id="@+id/layout_recordSewNC_productComponent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:divider="@drawable/divider_gray_vertical"
        android:orientation="horizontal"
        android:showDividers="middle">

    </LinearLayout>

    <View style="@style/line" />

    <LinearLayout
        android:id="@+id/layout_recordSewNC_designComponent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:divider="@drawable/divider_gray_vertical"
        android:orientation="horizontal"
        android:showDividers="middle">

    </LinearLayout>

    <View style="@style/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_recordSewNC_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:id="@+id/layout_recordSewNC_NcProcess"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <View style="@style/line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_recordSewNC_choseRepairProcess"
                    style="@style/btnStyle_primary"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="选择返修工序" />

                <Button
                    android:id="@+id/btn_cancel"
                    style="@style/btnStyle_primary"
                    android:layout_width="wrap_content"
                    android:text="取消" />

            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_NCType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout_recordSewNC_bottom"
            android:background="@color/white" />
    </RelativeLayout>

</LinearLayout>