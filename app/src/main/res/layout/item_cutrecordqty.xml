<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_gray_vertical"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_cutRecordQty_cutNo"
            style="@style/textStyle_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="裁床组" />

        <TextView
            android:id="@+id/tv_cutRecordQty_deviceNo"
            style="@style/textStyle_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="设备编号" />

        <TextView
            android:id="@+id/tv_cutRecordQty_orderNo"
            style="@style/textStyle_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="工单号" />

        <TextView
            android:id="@+id/tv_cutRecordQty_bedNo"
            style="@style/textStyle_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="床次" />

        <TextView
            android:id="@+id/tv_cutRecordQty_matNo"
            style="@style/textStyle_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="物料编号" />

        <TextView
            android:id="@+id/tv_cutRecordQty_matType"
            style="@style/textStyle_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="物料类型" />

        <TextView
            android:id="@+id/tv_cutRecordQty_recordUser"
            style="@style/textStyle_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="记录人" />

        <TextView
            android:id="@+id/tv_cutRecordQty_recordData"
            style="@style/textStyle_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="数据录入" />

        <TextView
            android:id="@+id/tv_cutRecordQty_del"
            style="@style/textStyle_default"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="8dp"
            android:text="删除"
            android:textColor="@color/text_red_default" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_gray_default" />

</LinearLayout>