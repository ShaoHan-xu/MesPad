<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:divider="@drawable/divider_gray"
                android:orientation="horizontal"
                android:showDividers="middle">
                
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white">
                    
                    <HorizontalScrollView
                        android:id="@+id/hsv_suspend_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/border_black"
                        android:padding="0.5dp"
                        android:visibility="gone">
                        
                        <LinearLayout
                            android:id="@+id/layout_suspend_img"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:divider="@drawable/divider_gray"
                            android:orientation="horizontal"
                            android:showDividers="middle|end" />
                    
                    </HorizontalScrollView>
                    
                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_suspend_componentImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/hsv_suspend_img" />
                
                </RelativeLayout>
                
                <LinearLayout
                    android:id="@+id/layout_component"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:divider="@drawable/divider_gray"
                    android:orientation="vertical"
                    android:showDividers="middle">
                
                </LinearLayout>
            
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">
                    
                    <TextView
                        style="@style/textStyle_default"
                        android:layout_width="match_parent"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="工艺说明"
                        android:textColor="@color/white" />
                    
                    <TextView
                        android:id="@+id/tv_suspend_craftDesc"
                        style="@style/textStyle_default"
                        android:padding="8dp" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:divider="@drawable/divider_gray"
                        android:orientation="horizontal"
                        android:showDividers="middle">
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="物料号"
                            android:textColor="@color/white" />
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="物料名称"
                            android:textColor="@color/white" />
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="用量"
                            android:textColor="@color/white" />
                    
                    </LinearLayout>
                    
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        
                        <LinearLayout
                            android:id="@+id/layout_suspend_matInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@drawable/divider_gray"
                            android:orientation="vertical"
                            android:showDividers="beginning|middle|end" />
                    </ScrollView>
                
                </LinearLayout>
            
            </LinearLayout>
        
        </LinearLayout>
    
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/layout_processList"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/tag_layout_loginUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_black"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:padding="5dp">
                
                <TextView
                    style="@style/textStyle_default"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="用户"
                    android:textColor="@color/white" />
                
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_gray" />
                
                <TextView
                    style="@style/textStyle_default"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="工号"
                    android:textColor="@color/white" />
            
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_gray" />
            
            <ScrollView
                android:id="@+id/scrollView_loginUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <LinearLayout
                    android:id="@+id/layout_loginUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray"
                    android:orientation="vertical"
                    android:showDividers="middle" />
            
            </ScrollView>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/layout_curProcess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="8dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <TextView
                    style="@style/textStyle_default"
                    android:layout_marginRight="8dp"
                    android:text="SFC"
                    android:textColor="@color/text_gray_default" />
                
                <TextView
                    android:id="@+id/tv_suspend_curSFC"
                    style="@style/textStyle_default" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                
                <TextView
                    style="@style/textStyle_gray"
                    android:layout_marginRight="8dp"
                    android:text="当前工序" />
                
                <TextView
                    android:id="@+id/tv_suspend_curProcess"
                    style="@style/textStyle_default"
                    android:text="上裁绑定" />
            
            </LinearLayout>
            
            <Button
                android:id="@+id/btn_suspend_binding"
                style="@style/btnStyle_green_round"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="绑定"
                android:textSize="28sp" />
        
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout_curProcess"
            android:layout_below="@id/tag_layout_loginUsers"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="8dp"
                android:text="订单信息"
                android:textColor="@color/white" />
            
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_marginRight="8dp"
                            android:text="生产订单号"
                            android:textColor="@color/text_gray_default" />
                        
                        <TextView
                            android:id="@+id/tv_suspend_orderNum"
                            style="@style/textStyle_default" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/layout_suspend_mtmOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_marginRight="8dp"
                            android:text="MTM订单号"
                            android:textColor="@color/text_gray_default" />
                        
                        <TextView
                            android:id="@+id/tv_suspend_MTMOrderNum"
                            style="@style/textStyle_default" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_marginRight="8dp"
                            android:text="批次号"
                            android:textColor="@color/text_gray_default" />
                        
                        <TextView
                            android:id="@+id/tv_suspend_processLot"
                            style="@style/textStyle_default" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_marginRight="8dp"
                            android:text="批次件数"
                            android:textColor="@color/text_gray_default" />
                        
                        <TextView
                            android:id="@+id/tv_suspend_processLotQTY"
                            style="@style/textStyle_default" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_marginRight="8dp"
                            android:text="实裁数"
                            android:textColor="@color/text_gray_default" />
                        
                        <TextView
                            android:id="@+id/tv_suspend_realCutQty"
                            style="@style/textStyle_default" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_marginRight="8dp"
                            android:text="订单数量"
                            android:textColor="@color/text_gray_default" />
                        
                        <TextView
                            android:id="@+id/tv_suspend_orderQty"
                            style="@style/textStyle_default" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_marginRight="8dp"
                            android:text="已上裁"
                            android:textColor="@color/text_gray_default" />
                        
                        <TextView
                            android:id="@+id/tv_suspend_finishQty"
                            style="@style/textStyle_default" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_marginRight="8dp"
                            android:text="款号"
                            android:textColor="@color/text_gray_default" />
                        
                        <TextView
                            android:id="@+id/tv_suspend_itemCode"
                            style="@style/textStyle_default" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_marginRight="8dp"
                            android:text="尺码"
                            android:textColor="@color/text_gray_default" />
                        
                        <TextView
                            android:id="@+id/tv_suspend_size"
                            style="@style/textStyle_default" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            style="@style/textStyle_default"
                            android:layout_marginRight="8dp"
                            android:text="物料描述"
                            android:textColor="@color/text_gray_default" />
                        
                        <TextView
                            android:id="@+id/tv_suspend_matDesc"
                            style="@style/textStyle_default" />
                    </LinearLayout>
                
                </LinearLayout>
            </ScrollView>
        
        </LinearLayout>
    
    </RelativeLayout>
</LinearLayout>