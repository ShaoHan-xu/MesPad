<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_recordLabu_materialNum"
        style="@style/textStyle_default"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2"
        android:background="@drawable/border_black"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp" />

    <EditText
        android:id="@+id/et_recordLabu_juanHao"
        style="@style/textStyle_default"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:inputType="number"
        android:background="@drawable/border_black"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp" />

    <EditText
        android:id="@+id/et_recordLabu_length"
        style="@style/textStyle_default"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/border_black"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="5dp" />

    <EditText
        android:id="@+id/et_recordLabu_layers"
        style="@style/textStyle_default"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/border_black"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:padding="5dp" />

    <EditText
        android:id="@+id/et_recordLabu_left"
        style="@style/textStyle_default"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/border_black"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="5dp" />

    <EditText
        android:id="@+id/et_recordLabu_remark"
        style="@style/textStyle_default"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2"
        android:background="@drawable/border_black"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp" />

    <Button
        android:id="@+id/btn_recordLabu_del"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_del" />

</LinearLayout>