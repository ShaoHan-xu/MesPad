<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/divider_gray_vertical"
    android:orientation="horizontal"
    android:showDividers="middle">

    <TextView
        android:id="@+id/tv_matInfo_matNo"
        style="@style/textStyle_default"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tv_matInfo_matDesc"
        style="@style/textStyle_default"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp" />

    <EditText
        android:id="@+id/et_matInfo_matQty"
        style="@style/textStyle_default"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tv_matInfo_matUnit"
        style="@style/textStyle_default"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp" />
</LinearLayout>