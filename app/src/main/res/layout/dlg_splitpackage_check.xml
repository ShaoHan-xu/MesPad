<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#B2C657"
        android:gravity="center"
        android:text="分包点检表"
        android:textColor="@color/text_black_default"
        android:textSize="@dimen/textSize_title" />
    
    <LinearLayout
        android:id="@+id/layout_buttonList"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray_disable"
            android:text="取消"
            android:textSize="@dimen/textSize_content" />
        
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_orange"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_content" />
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout_checkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        
        <CheckBox
            style="@style/textStyle_default"
            android:button="@drawable/checkbox_green"
            android:padding="10dp"
            android:text="核对实物与码数"
            android:textSize="@dimen/textSize_title" />
        
        <CheckBox
            style="@style/textStyle_default"
            android:button="@drawable/checkbox_green"
            android:padding="10dp"
            android:text="裁片块数是否正确"
            android:textSize="@dimen/textSize_title" />
        
        <CheckBox
            style="@style/textStyle_default"
            android:button="@drawable/checkbox_green"
            android:padding="10dp"
            android:text="是否区分 A/B 件"
            android:textSize="@dimen/textSize_title" />
        
        <CheckBox
            style="@style/textStyle_default"
            android:button="@drawable/checkbox_green"
            android:padding="10dp"
            android:text="检查裁片是否同边"
            android:textSize="@dimen/textSize_title" />
    
    </LinearLayout>

</RelativeLayout>