<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:id="@+id/layout_sewDescInfo"
        android:layout_width="@dimen/dp_125"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/border_black"
        android:orientation="vertical"
        android:padding="0.5dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_2">
            
            <TextView
                style="@style/textStyle_default"
                android:paddingRight="@dimen/dp_5"
                android:text="@string/efficiency" />
            
            <TextView
                android:id="@+id/tv_sew_workEfficiency"
                style="@style/textStyle_default"
                android:gravity="center"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_2">
            
            <TextView
                style="@style/textStyle_gray"
                android:layout_marginRight="@dimen/dp_2"
                android:text="上一站位" />
            
            <TextView
                android:id="@+id/tv_sew_lastPosition"
                style="@style/textStyle_default" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_gray" />
        
        <LinearLayout
            android:id="@+id/layout_sew_craftDesc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_2">
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="match_parent"
                android:background="@drawable/border_bottom_dash"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:text="工艺描述："
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tv_sew_craftDesc"
                style="@style/textStyle_default" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_gray" />
        
        <LinearLayout
            android:id="@+id/layout_sew_qualityReq"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_weight="0.7"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_2">
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="match_parent"
                android:background="@drawable/border_bottom_dash"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:text="品质要求："
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tv_sew_qualityReq"
                style="@style/textStyle_default" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_gray" />
        
        <LinearLayout
            android:id="@+id/layout_sew_special"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_2">
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="match_parent"
                android:background="@drawable/border_bottom_dash"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:text="特殊要求："
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tv_sew_special"
                style="@style/textStyle_default" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/layout_sew_ncData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/border_red"
            android:orientation="vertical"
            android:padding="@dimen/dp_2"
            android:visibility="gone">
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="match_parent"
                android:background="@drawable/border_bottom_dash"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:text="不良描述："
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tv_sew_ncData"
                style="@style/textStyle_default" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/tv_sew_ncDetail"
            style="@style/textStyle_default"
            android:layout_width="match_parent"
            android:background="@color/text_red_default"
            android:gravity="center"
            android:padding="@dimen/dp_3"
            android:text="查看不合格点"
            android:textColor="@color/white"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/tv_sew_secondClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="#F51D68"
            android:gravity="center"
            android:padding="@dimen/dp_2"
            android:text="缺面料"
            android:textColor="@color/white"
            android:visibility="gone" />
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout_sewOrderInfo"
        android:layout_width="@dimen/dp_125"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_1"
        android:background="@drawable/border_black"
        android:orientation="vertical"
        android:padding="0.5dp">
    
        <include layout="@layout/layout_loginusers" />
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">
            
            <RelativeLayout
                android:id="@+id/layout_dayOutput"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/btn_orange_round"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2">
                
                <TextView
                    style="@style/textStyle_default"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/dp_5"
                    android:text="日产量"
                    android:textColor="@color/white" />
                
                <TextView
                    android:id="@+id/tv_sew_dayOutput"
                    style="@style/textStyle_default"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white" />
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dp_3"
                    android:src="@drawable/ic_arrow_right_solid" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/layout_dayNc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_orange_round"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2">
                
                <TextView
                    style="@style/textStyle_default"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/dp_5"
                    android:text="日返修"
                    android:textColor="@color/white" />
                
                <TextView
                    android:id="@+id/tv_sew_dayNc"
                    style="@style/textStyle_default"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white" />
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dp_3"
                    android:src="@drawable/ic_arrow_right_solid" />
            </RelativeLayout>
        
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_gray" />
        
        
        <TextView
            style="@style/textStyle_default"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/border_bottom_dash"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:text="工单号" />
        
        <TextView
            android:id="@+id/tv_sew_sfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_17" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_gray" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@drawable/border_bottom_dash"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:text="当前工序" />
            
            <ListView
                android:id="@+id/lv_sew_curProcess"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
            
            <TextView
                style="@style/textStyle_default"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_2"
                android:background="@drawable/border_bottom_dash"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:text="下一工序" />
            
            <ListView
                android:id="@+id/lv_sew_nextProcess"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7" />
        
        </LinearLayout>
        
        <View
            style="@style/line"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_2" />
        
        <TextView
            style="@style/textStyle_default"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/border_bottom_dash"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:text="订单信息" />
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/white">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp_2">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:orientation="horizontal">
                    
                    <TextView
                        style="@style/textStyle_default"
                        android:layout_marginRight="@dimen/dp_5"
                        android:text="生产订单号"
                        android:textColor="@color/text_gray_default" />
                    
                    <TextView
                        android:id="@+id/tv_sew_orderNum"
                        style="@style/textStyle_default" />
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/layout_sew_salesOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    
                    <TextView
                        style="@style/textStyle_default"
                        android:layout_marginRight="@dimen/dp_5"
                        android:text="MTM订单号"
                        android:textColor="@color/text_gray_default" />
                    
                    <TextView
                        android:id="@+id/tv_sew_MTMOrderNum"
                        style="@style/textStyle_default" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    
                    <TextView
                        style="@style/textStyle_default"
                        android:text="批次号：" />
                    
                    <TextView
                        android:id="@+id/tv_batchNum"
                        style="@style/textStyle_default" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:orientation="horizontal">
                    
                    <TextView
                        style="@style/textStyle_default"
                        android:layout_marginRight="@dimen/dp_5"
                        android:text="款号"
                        android:textColor="@color/text_gray_default" />
                    
                    <TextView
                        android:id="@+id/tv_sew_style"
                        style="@style/textStyle_default" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:orientation="horizontal">
                    
                    <TextView
                        style="@style/textStyle_default"
                        android:layout_marginRight="@dimen/dp_5"
                        android:text="尺码"
                        android:textColor="@color/text_gray_default" />
                    
                    <TextView
                        android:id="@+id/tv_sew_size"
                        style="@style/textStyle_default" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:orientation="horizontal">
                    
                    <TextView
                        style="@style/textStyle_default"
                        android:layout_marginRight="@dimen/dp_5"
                        android:text="物料描述"
                        android:textColor="@color/text_gray_default" />
                    
                    <TextView
                        android:id="@+id/tv_sew_matDesc"
                        style="@style/textStyle_default" />
                </LinearLayout>
            </LinearLayout>
        
        </ScrollView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        android:layout_toLeftOf="@id/layout_sewOrderInfo"
        android:layout_toRightOf="@id/layout_sewDescInfo"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="vertical">
            
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <LinearLayout
                    android:id="@+id/layout_sew_processList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray"
                    android:orientation="horizontal"
                    android:showDividers="middle|end" />
            </HorizontalScrollView>
            
            <View style="@style/line" />
            
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_sew_sop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        
        </LinearLayout>
        
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_weight="0.8"
            android:background="@color/white">
            
            <LinearLayout
                android:id="@+id/layout_sew_matInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:divider="@drawable/divider_white_5dp"
                android:orientation="horizontal"
                android:showDividers="middle" />
        </HorizontalScrollView>
    
    </LinearLayout>

</RelativeLayout>