<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:divider="@drawable/divider_gray"
    android:gravity="center"
    android:orientation="vertical"
    android:showDividers="middle">

    <TextView
        android:id="@+id/tv_sewQc_sizeAttr"
        style="@style/textStyle_default"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        android:paddingTop="@dimen/dp_4" />

    <TextView
        android:id="@+id/tv_sewQc_refSize"
        style="@style/textStyle_default"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4" />

    <EditText
        android:id="@+id/et_sewQc_finishedSize"
        style="@style/textStyle_default"
        android:layout_width="match_parent"
        android:background="@drawable/btn_normal"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_sewQc_refTolerance"
        style="@style/textStyle_default"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4" />

    <TextView
        android:id="@+id/tv_sewQc_realTolerance"
        style="@style/textStyle_default"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4" />
</LinearLayout>
